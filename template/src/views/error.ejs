<!DOCTYPE html>
<html lang="<%=lang%>">

<head>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Error <%= title %>
  </title>
  <link rel="stylesheet" href="/css/lib/bootstrap.css" />
  <link rel="stylesheet" href="/css/core/error.css" />
</head>

<body class="<%=theme%>">
  <div class="error">
    <div id="title">
      <%= title %>
    </div>
    <div id="message">
      <% if (locals.devMode) { %>

        <code>DEV MODE</code>
        <% } %>
          <span>
            <%= message %>
          </span>
    </div>
    <a class="btn">
      <%= tr.return_back %>
    </a>

  </div>

  <script>
    document.querySelector(".btn").addEventListener("click", (_) => {
      history.back();
    });
  </script>
</body>

</html>