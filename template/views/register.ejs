<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>[##NAME##] - <%= tr.register_t?.toUpperCase() %></title>

  <link rel="stylesheet" href="/css/expresso.css" />
  <link rel="stylesheet" href="/css/login.css" />
  <style>
    input[type="file"] {
      display: none;
    }

    #img_label {
      display: block;
      text-align: center;
      color: #aaa;
      cursor: pointer;
      border: 1px solid #aaa;
      padding: 10px;
      border-radius: 5px;
    }

    #img_label:hover {
      background-color: #fff1;
    }
  </style>
</head>

<body>
  <div class="container">
    <div>
      <div class="login-register-page">
        <!-- Welcome Text -->
        <div class="welcome-text">
          <h1><%= tr.register_t?.toUpperCase() %></h1>
          <h3>[##NAME##] <%= tr.by %> Expresso</h3>
          <span> <%= tr.already_have_account %> <a href="/login"><%= tr.login %></a></span>
        </div>

        <!-- Form -->
        <form action="/register" method="post" id="register-form" enctype="multipart/form-data">
          <div class="input-with-icon-left">
            <i class="icon-line-awesome-user"></i>
            <input type="text" class="input-text with-border" name="name" id="name" placeholder="<%= tr.fullname %>" required value="<%= locals.body?.name %>" />
          </div>
          <div class="input-with-icon-left">
            <i class="icon-material-baseline-mail-outline"></i>
            <input type="text" class="input-text with-border" name="email" id="email" placeholder="<%= tr.email_address %>" required value="<%= locals.body?.email %>" />
          </div>

          <div class="input-with-icon-left" title="Should be at least 8 characters long" data-tippy-placement="bottom">
            <i class="icon-material-outline-lock"></i>
            <input type="password" class="input-text with-border" name="password" id="password" placeholder="<%= tr.password %>" required />
          </div>

          <div class="input-with-icon-left">
            <i class="icon-material-outline-lock"></i>
            <input type="password" class="input-text with-border" name="password-repeat" id="password-repeat" placeholder="<%= tr.repeat_password %>" required />
          </div>

          <label for="image" id="img_label"><%= tr.choose_profile_picture %></label>
          <input type="file" name="image" id="image" accept="image/*" />
        </form>

        <!-- Button -->
        <button class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit" form="register-form">
          <%= tr.register %> <i class="icon-material-outline-arrow-right-alt"></i>
        </button>

        <!-- Social Login -->
        <div class="social-login-separator"><span><%= tr.or %></span></div>
        <div class="social-login-buttons">
          <button class="facebook-login ripple-effect">
            <i class="icon-brand-facebook-f"></i> <%= tr.register_facebook %>
          </button>
          <button class="google-login ripple-effect">
            <i class="icon-brand-google-plus-g"></i> <%= tr.register_google %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <% if (locals.error) { %>
  <div id="error"><%= error.message %></div>
  <% } %>
  
  <script>
    const img_label = document.getElementById("img_label");
    const image = document.getElementById("image");

    image.addEventListener("change", () => {
      const file = image.files[0];
      const reader = new FileReader();
      reader.onloadend = () => {
        img_label.innerText = file.name;
      };
      reader.readAsDataURL(file);
    });
  </script>
</body>

</html>