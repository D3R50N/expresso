<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>[##NAME##] - <%= tr.login_t?.toUpperCase() %></title>
  <link rel="stylesheet" href="/css/expresso.css" />
  <link rel="stylesheet" href="/css/login.css" />
</head>

<body>
  <div class="container">
    <div class="login-register-page">
      <!-- Welcome Text -->
      <div class="welcome-text">
        <h1><%= tr.login_t?.toUpperCase() %> </h1>
        <h3>[##NAME##] <%= tr.by %> Expresso</h3>

        <span><%= tr.no_account %> <a href="<%= routes.register %>"><%= tr.sign_up%></a></span>
      </div>

      <form action="<%= routes.login %>" method="post" id="login-form">
        <div class="input-with-icon-left">
          <i class="icon-material-baseline-mail-outline"></i>
          <input type="text" class="input-text with-border" name="email" id="email" placeholder="<%= tr.email_address%>" required value="<%= locals.body?.email %>" />
        </div>

        <div class="input-with-icon-left">
          <i class="icon-material-outline-lock"></i>
          <input type="password" class="input-text with-border" name="password" id="password" placeholder="<%= tr.password %>" required />
        </div>
        <a href="<%= routes.reset_password %>" class="forgot-password"><%= tr.forgot_password%></a>
      </form>

      <!-- Button -->
      <button class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit" form="login-form">
        <%= tr.login%> <i class="icon-material-outline-arrow-right-alt"></i>
      </button>

      <!-- Social Login -->
      <div class="social-login-separator"><span><%= tr.or%></span></div>
      <div class="social-login-buttons">
        <button class="facebook-login ripple-effect">
          <i class="icon-brand-facebook-f"></i> <%= tr.login_facebook%>
        </button>
        <button class="google-login ripple-effect">
          <i class="icon-brand-google-plus-g"></i> <%= tr.login_google%>
        </button>
      </div>
    </div>
  </div>

  <% if (locals.error) { %>
  <div id="error"><%= error.message %></div>
  <% } %>
</body>

</html>